{
  "name": "bitsten-api",
  "version": "1.0.0",
  "author": "bitsten API",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "start": "npm run nodemon",
    "poststart": "npm run create-sqlite-db",
    "dev": "nodemon ./api/api.js",
    "nodemon": "nodemon --exec npm run dev",
    "create-sqlite-db": "shx touch ./db/database.sqlite",
    "drop-sqlite-db": "shx rm ./db/database.sqlite",
    "lint": "eslint ./api/. ./config/. ./test/.",
    "prepush": "npm test",
    "pretest": "npm run lint",
    "production": "cross-env NODE_ENV=production node ./api/api.js",
    "test": "npm run create-sqlite-db; cross-env NODE_ENV=testing jest --coverage; npm run drop-sqlite-db",
    "test-ci": "jest --coverage --forceExit",
    "sequelize-auto": "node node_modules/.bin/sequelize-auto.js"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "core-js": "^2.6.9",
    "cors": "^2.8.4",
    "crypto": "^1.0.1",
    "crypto-js": "^4.0.0",
    "dotenv": "^9.0.1",
    "express": "^4.18.2",
    "express-routes-mapper": "^1.0.2",
    "helmet": "^3.12.0",
    "jsonwebtoken": "^8.2.1",
    "mysql2": "^2.2.5",
    "sequelize": "^6.0.0",
    "sequelize-auto": "^0.8.2",
    "sqlite3": "^4.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "jest": "^24.8.0",
    "nodemon": "^1.17.3",
    "shx": "^0.2.2",
    "supertest": "^3.0.0"
  }
}
